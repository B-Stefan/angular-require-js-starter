<section class="intro {{daytime.cssClass}} ">
    <div class="intro-body">
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">

                    <h1 ng-if="name.length > 0" class="brand-heading">Hey <span>{{name}}</span></h1>

                    <h1 ng-if="name.length == 0 " class="brand-heading">Moin Moin  {{name}}</h1>
                    <p class="intro-text">Ich bin's Stefan Bieliauskas</p>

                    <div class="page-scroll">
                        <a ng-click="$root.goToSection('about')" class="btn btn-circle">
                            <i class="fa fa-angle-double-down animated"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>